<div class="box block-component" role="<%= component.id %>" data-sort-collapse data-update-position-path="<%= update_position_component_path(component) %>">
  <div data-original-title="" class="box-header">
    <h2><i class="icon-th handle"></i><span class="break"></span><%= component.to_s %></h2>
    <div class="box-icon">
      <%= link_to edit_component_path(component), :remote => true, :class => "btn-setting" do %>
      <i class="icon-wrench"></i>
      <% end %>
      <%= link_to component_path(component), :remote => true, :method => :delete, :class => "resource-delete btn-close", :confirm => "Are you sure you want to delete this component?" do %>
      <i class="icon-remove"></i>
      <% end %>
    </div>
  </div>
  <div class="box-content" data-sort-collapse-component>
  <% if component.contentable %>
    <%= render component.contentable %>
  <% end %>
  </div>
</div>